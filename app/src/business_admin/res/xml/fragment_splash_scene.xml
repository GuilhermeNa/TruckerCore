<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/frag_verifying_email_state_2"
        motion:constraintSetStart="@id/frag_verifying_email_state_1"
        motion:duration="2500"
        motion:autoTransition="animateToEnd" >
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/frag_splash_logo"
               motion:framePosition="15"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/frag_splash_logo"
               motion:framePosition="15"
               android:scaleX="0" />
           <KeyAttribute
               motion:motionTarget="@+id/frag_splash_logo"
               motion:framePosition="15"
               android:scaleY="0" />
           <KeyAttribute
               motion:motionTarget="@+id/frag_splash_circle"
               motion:framePosition="30"
               android:scaleX="0" />
           <KeyAttribute
               motion:motionTarget="@+id/frag_splash_circle"
               motion:framePosition="30"
               android:scaleY="0" />
           <KeyAttribute
               motion:motionTarget="@+id/frag_splash_logo"
               motion:framePosition="35"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/frag_splash_logo"
               motion:framePosition="35"
               android:scaleX="1.5" />
           <KeyAttribute
               motion:motionTarget="@+id/frag_splash_logo"
               motion:framePosition="35"
               android:scaleY="1.5" />
           <KeyAttribute
               motion:motionTarget="@+id/frag_splash_logo"
               motion:framePosition="50"
               android:scaleX="1" />
           <KeyAttribute
               motion:motionTarget="@+id/frag_splash_logo"
               motion:framePosition="50"
               android:scaleY="1" />
           <KeyPosition
               motion:motionTarget="@+id/frag_splash_logo"
               motion:framePosition="50"
               motion:keyPositionType="parentRelative"
               motion:percentX="0.5"
               motion:percentY="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/frag_splash_adm"
               motion:framePosition="70"
               android:alpha="0" />
           <KeyPosition
               motion:motionTarget="@+id/frag_splash_adm"
               motion:framePosition="70"
               motion:keyPositionType="parentRelative"
               motion:percentX="0.5"
               motion:percentY="0.5" />
           <KeyPosition
               motion:motionTarget="@+id/frag_splash_logo"
               motion:framePosition="70"
               motion:keyPositionType="deltaRelative"
               motion:percentX="1"
               motion:percentY="1" />
           <KeyPosition
               motion:motionTarget="@+id/frag_splash_adm"
               motion:framePosition="80"
               motion:keyPositionType="pathRelative"
               motion:percentX="0"
               motion:percentY="0" />
           <KeyAttribute
               motion:motionTarget="@+id/frag_splash_in"
               motion:framePosition="80"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/frag_splash_progressbar"
               motion:framePosition="90"
               android:alpha="0" />
           <KeyPosition
               motion:motionTarget="@+id/frag_splash_progressbar"
               motion:framePosition="90"
               motion:keyPositionType="axisRelative"
               motion:percentX="-.5"
               motion:percentY="-.5" />
           <KeyPosition
               motion:motionTarget="@+id/frag_splash_logo"
               motion:framePosition="35"
               motion:keyPositionType="parentRelative"
               motion:percentX="0.5"
               motion:percentY="0.5" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/frag_verifying_email_state_1">
        <Constraint
            android:id="@+id/frag_splash_circle"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="150dp"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="10"
            android:scaleY="10" />
        <Constraint
            android:id="@+id/frag_splash_adm"
            motion:layout_constraintStart_toEndOf="@id/frag_splash_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="0" />
        <Constraint
            android:id="@+id/frag_splash_in"
            motion:layout_constraintStart_toEndOf="@id/frag_splash_adm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="0" />
        <Constraint
            android:id="@+id/frag_splash_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="0"
            android:scaleY="0"
            android:alpha="0" />
        <Constraint
            android:id="@+id/frag_splash_progressbar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.2"
            motion:layout_constraintTop_toBottomOf="@id/frag_splash_logo"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/frag_verifying_email_state_2">
        <Constraint
            android:id="@+id/frag_splash_circle"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="150dp"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="0"
            android:scaleY="0" />
        <Constraint
            android:id="@+id/frag_splash_logo"
            motion:layout_constraintEnd_toStartOf="@id/frag_splash_guideline"
            android:layout_width="75dp"
            android:layout_height="75dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="1" />
    </ConstraintSet>
</MotionScene>