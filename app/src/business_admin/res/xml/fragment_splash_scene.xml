<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/frag_verifying_email_state_1">
        <Constraint
            android:id="@+id/frag_splash_circle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleX="10"
            android:scaleY="10"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/frag_splash_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="@id/frag_splash_guideline"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/frag_splash_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="@id/frag_splash_name"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/frag_splash_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:alpha="0"
            android:scaleX="0"
            android:scaleY="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/frag_splash_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/frag_splash_logo"
            motion:layout_constraintVertical_bias="0.2" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/frag_verifying_email_state_2">
        <Constraint
            android:id="@+id/frag_splash_circle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleX="0"
            android:scaleY="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/frag_splash_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:alpha="1"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/frag_splash_guideline"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/frag_verifying_email_state_3">
        <Constraint
            android:id="@+id/frag_splash_circle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleX="0"
            android:scaleY="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/frag_splash_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:alpha="1"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/frag_splash_guideline"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/frag_splash_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:scaleX="0"
            android:scaleY="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/frag_splash_logo"
            motion:layout_constraintVertical_bias="0.3" />
    </ConstraintSet>

    <Transition
        motion:constraintSetEnd="@+id/frag_verifying_email_state_2"
        motion:constraintSetStart="@id/frag_verifying_email_state_1"
        motion:duration="2500">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="15"
                motion:motionTarget="@+id/frag_splash_logo" />
            <KeyAttribute
                android:scaleX="0"
                motion:framePosition="15"
                motion:motionTarget="@+id/frag_splash_logo" />
            <KeyAttribute
                android:scaleY="0"
                motion:framePosition="15"
                motion:motionTarget="@+id/frag_splash_logo" />
            <KeyAttribute
                android:scaleX="0"
                motion:framePosition="30"
                motion:motionTarget="@+id/frag_splash_circle" />
            <KeyAttribute
                android:scaleY="0"
                motion:framePosition="30"
                motion:motionTarget="@+id/frag_splash_circle" />
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="35"
                motion:motionTarget="@+id/frag_splash_logo" />
            <KeyAttribute
                android:scaleX="1.5"
                motion:framePosition="35"
                motion:motionTarget="@+id/frag_splash_logo" />
            <KeyAttribute
                android:scaleY="1.5"
                motion:framePosition="35"
                motion:motionTarget="@+id/frag_splash_logo" />
            <KeyAttribute
                android:scaleX="1"
                motion:framePosition="50"
                motion:motionTarget="@+id/frag_splash_logo" />
            <KeyAttribute
                android:scaleY="1"
                motion:framePosition="50"
                motion:motionTarget="@+id/frag_splash_logo" />
            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/frag_splash_logo"
                motion:percentX="0.5"
                motion:percentY="0.5" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="70"
                motion:motionTarget="@+id/frag_splash_name" />
            <KeyPosition
                motion:framePosition="70"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/frag_splash_name"
                motion:percentX="0.5"
                motion:percentY="0.5" />
            <KeyPosition
                motion:framePosition="70"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@+id/frag_splash_logo"
                motion:percentX="1"
                motion:percentY="1" />
            <KeyPosition
                motion:framePosition="80"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/frag_splash_name"
                motion:percentX="0"
                motion:percentY="0" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="80"
                motion:motionTarget="@+id/frag_splash_in" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="90"
                motion:motionTarget="@+id/frag_splash_progressbar" />
            <KeyPosition
                motion:framePosition="90"
                motion:keyPositionType="axisRelative"
                motion:motionTarget="@+id/frag_splash_progressbar"
                motion:percentX="-.5"
                motion:percentY="-.5" />
            <KeyPosition
                motion:framePosition="35"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/frag_splash_logo"
                motion:percentX="0.5"
                motion:percentY="0.5" />
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/frag_verifying_email_state_3"
        motion:constraintSetStart="@+id/frag_verifying_email_state_2"
        motion:duration="1000">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="1"
                android:scaleX="0.8"
                android:scaleY="0.8"
                motion:framePosition="0"
                motion:motionTarget="@+id/frag_splash_progressbar" />
            <KeyAttribute
                android:alpha="1"
                android:scaleX="1.2"
                android:scaleY="1.2"
                motion:framePosition="50"
                motion:motionTarget="@+id/frag_splash_progressbar" />
        </KeyFrameSet>
    </Transition>

</MotionScene>