<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_login"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.truckercore.business_admin.view.login.BaSplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.truckercore.view.fragments.welcome.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_authOptionsFragment"
            app:destination="@id/authOptionsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="flavor"
            app:argType="com.example.truckercore.view.enums.Flavor" />
    </fragment>
    <fragment
        android:id="@+id/authOptionsFragment"
        android:name="com.example.truckercore.view.fragments.auth_options.AuthOptionsFragment"
        android:label="fragment_auth_options"
        tools:layout="@layout/fragment_auth_options" >
        <action
            android:id="@+id/action_authOptionsFragment_to_phoneAuthFragment"
            app:destination="@id/phoneAuthFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_authOptionsFragment_to_emailAuthFragment"
            app:destination="@id/emailAuthFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/phoneAuthFragment"
        android:name="com.example.truckercore.view.fragments.phone_auth.PhoneAuthFragment"
        android:label="fragment_phone_auth"
        tools:layout="@layout/fragment_phone_auth" />
    <fragment
        android:id="@+id/emailAuthFragment"
        android:name="com.example.truckercore.view.fragments.email_auth.EmailAuthFragment"
        android:label="fragment_email_auth"
        tools:layout="@layout/fragment_email_auth" />

</navigation>