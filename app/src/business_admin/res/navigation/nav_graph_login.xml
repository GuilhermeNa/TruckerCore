<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_login"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.truckercore.view.fragments.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:enterAnim="@anim/slide_in_top"
            app:exitAnim="@anim/slide_out_bottom"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_emailAuthFragment"
            app:destination="@id/emailAuthFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_continueRegisterFragment"
            app:destination="@id/continueRegisterFragment"
            app:enterAnim="@anim/slide_in_bottom"
            app:exitAnim="@anim/slide_out_top"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.truckercore.view.fragments.welcome.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <argument
            android:name="flavor"
            app:argType="com.example.truckercore.model.configs.build.Flavor" />
        <action
            android:id="@+id/action_welcomeFragment_to_emailAuthFragment"
            app:destination="@id/emailAuthFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/emailAuthFragment"
        android:name="com.example.truckercore.view.fragments.email_auth.EmailAuthFragment"
        android:label="fragment_email_auth"
        tools:layout="@layout/fragment_email_auth" >
        <action
            android:id="@+id/action_emailAuthFragment_to_verifyingEmailFragment"
            app:destination="@id/verifyingEmailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popUpTo="@id/emailAuthFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/verifyingEmailFragment"
        android:name="com.example.truckercore.view.fragments.verifying_email.VerifyingEmailFragment"
        android:label="fragment_verifying_email"
        tools:layout="@layout/fragment_verifying_email" >
        <action
            android:id="@+id/action_verifyingEmailFragment_to_emailAuthFragment"
            app:destination="@id/emailAuthFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popUpTo="@id/verifyingEmailFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/continueRegisterFragment"
        android:name="com.example.truckercore.view.fragments.continue_register.ContinueRegisterFragment"
        android:label="fragment_continue_register"
        tools:layout="@layout/fragment_continue_register" >
        <action
            android:id="@+id/action_continueRegisterFragment_to_verifyingEmailFragment"
            app:destination="@id/verifyingEmailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/continueRegisterFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_continueRegisterFragment_to_emailAuthFragment"
            app:destination="@id/emailAuthFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popUpTo="@id/continueRegisterFragment"
            app:popUpToInclusive="true" />
    </fragment>


</navigation>