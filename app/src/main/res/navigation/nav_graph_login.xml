<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_login"
    app:startDestination="@id/verifyingEmailFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.truckercore.presentation.nav_login.fragments.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:enterAnim="@anim/slide_in_top"
            app:exitAnim="@anim/slide_out_bottom"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.truckercore.presentation.nav_login.fragments.welcome.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_emailAuthFragment"
            app:destination="@id/emailAuthFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/emailAuthFragment"
        android:name="com.example.truckercore.presentation.nav_login.fragments.email_auth.EmailAuthFragment"
        android:label="fragment_email_auth"
        tools:layout="@layout/fragment_email_auth" >
        <action
            android:id="@+id/action_emailAuthFragment_to_verifyingEmailFragment"
            app:destination="@id/verifyingEmailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popUpTo="@id/emailAuthFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/verifyingEmailFragment"
        android:name="com.example.truckercore.presentation.nav_login.fragments.verifying_email.VerifyingEmailFragment"
        android:label="fragment_verifying_email"
        tools:layout="@layout/fragment_verifying_email" >
        <action
            android:id="@+id/action_verifyingEmailFragment_to_userNameFragment"
            app:destination="@id/userNameFragment" />
    </fragment>
    <fragment
        android:id="@+id/continueRegisterFragment"
        android:name="com.example.truckercore.presentation.nav_login.fragments.continue_register.ContinueRegisterFragment"
        android:label="fragment_continue_register"
        tools:layout="@layout/fragment_continue_register" >
        <action
            android:id="@+id/action_continueRegisterFragment_to_verifyingEmailFragment"
            app:destination="@id/verifyingEmailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/continueRegisterFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_continueRegisterFragment_to_emailAuthFragment"
            app:destination="@id/emailAuthFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popUpTo="@id/continueRegisterFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_continueRegisterFragment_to_userNameFragment"
            app:destination="@id/userNameFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.truckercore.presentation.nav_login.fragments.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_forgetPasswordFragment"
            app:destination="@id/forgetPasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/forgetPasswordFragment"
        android:name="com.example.truckercore.layers.presentation.nav_login.fragments.forget_password.ForgetPasswordFragment"
        android:label="fragment_forget_password"
        tools:layout="@layout/fragment_forget_password" />
    <fragment
        android:id="@+id/userNameFragment"
        android:name="com.example.truckercore.layers.presentation.nav_login.fragments.user_name.UserNameFragment"
        android:label="fragment_user_name"
        tools:layout="@layout/fragment_user_name" />
    <action android:id="@+id/action_global_continueRegisterFragment"
        app:destination="@id/continueRegisterFragment"
        app:enterAnim="@anim/slide_in_top"
        app:exitAnim="@anim/slide_out_bottom"
        app:popUpTo="@id/nav_graph_login"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"
        app:enterAnim="@anim/slide_in_bottom"
        app:exitAnim="@anim/slide_out_top"
        app:popUpTo="@id/nav_graph_login"
        app:popUpToInclusive="true" />
    <action android:id="@+id/action_global_emailAuthFragment"
        app:destination="@id/emailAuthFragment"
        app:enterAnim="@anim/slide_in_top"
        app:exitAnim="@anim/slide_out_bottom"
        app:popUpTo="@id/nav_graph_login"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/noConnectionFragment"
        android:name="com.example.truckercore.layers.presentation.common.NoConnectionFragment"
        android:label="fragment_no_connection"
        tools:layout="@layout/fragment_no_connection" />

    <action android:id="@+id/action_global_noConnectionFragment_nav_login"
        app:destination="@id/noConnectionFragment" />


</navigation>