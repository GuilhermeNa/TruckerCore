<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/frag_user_name_scene_state_end"
        motion:constraintSetStart="@id/frag_user_name_scene_state_start"
        motion:duration="500"/>

    <ConstraintSet android:id="@+id/frag_user_name_scene_state_start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/frag_user_name_scene_state_end">
        <Constraint
            android:id="@+id/frag_user_name_error"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@id/frag_user_name_card"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />
    </ConstraintSet>
</MotionScene>