<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/frag_verifying_email_state_2"
        motion:constraintSetStart="@id/frag_verifying_email_state_1"
        motion:duration="500">
    </Transition>

    <ConstraintSet android:id="@+id/frag_verifying_email_state_1">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/frag_verifying_email_state_2">
        <Constraint
            android:id="@+id/frag_verifying_email_layout_counter"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/frag_verifying_email_button_resend"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp"
            android:alpha="0"
            android:scaleX="0.8"
            android:scaleY="0.8" />
    </ConstraintSet>
</MotionScene>