<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_primary"
    tools:context=".layers.presentation.login.view.fragments.verifying_email.VerifyingEmailFragment">

    <!-- Shimmer image layout -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/frag_verifying_email_shimmer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/frag_verifying_email_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/background_circle"
                android:backgroundTint="@color/shimmer" />

            <View
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:background="@color/shimmer" />
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Email layout -->
    <LinearLayout
        android:id="@+id/frag_verifying_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:importantForAccessibility="no"
            android:src="@drawable/o_email" />

        <TextView
            android:id="@+id/frag_verifying_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/textSmall"
            android:textStyle="bold|italic"
            tools:text="someMail@email.com" />
    </LinearLayout>

    <!-- Shimmer idle layout -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/frag_verifying_email_button_shimmer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="48dp"
        app:layout_constraintBottom_toBottomOf="@id/frag_verifying_email_button_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frag_verifying_email_button_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/shimmer" />

            <View
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="32dp"
                android:background="@color/shimmer" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Idle layout -->
    <LinearLayout
        android:id="@+id/frag_verifying_email_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_verifying_email_layout">

        <Button
            android:id="@+id/frag_verifying_email_button_send"
            style="@style/buttonPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="16dp"
            android:text="@string/send_verification_email" />

        <Button
            android:id="@+id/frag_verifying_email_button_new_email"
            style="@style/buttonSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/register_new_email" />

    </LinearLayout>

    <!-- Verifying layout -->
    <LinearLayout
        android:id="@+id/frag_verifying_email_timer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_verifying_email_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="80dp"
            android:layout_height="80dp">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/frag_verifying_email_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="61"
                android:progress="0"
                app:indicatorColor="?attr/colorSecondary"
                app:indicatorTrackGapSize="0dp"
                app:trackColor="@color/transparentDialog"
                app:trackCornerRadius="1dp" />

            <TextView
                android:id="@+id/frag_verifying_email_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="59" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/validating_email_description"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/textSmall"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Verified layout -->
    <LinearLayout
        android:id="@+id/frag_verifying_email_verified_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_verifying_email_layout">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="16dp"
            android:animateLayoutChanges="true"
            android:translationZ="11dp"
            app:cardBackgroundColor="?attr/colorSecondaryVariant"
            app:cardCornerRadius="50dp"
            app:cardElevation="11dp"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:importantForAccessibility="no"
                android:src="@drawable/icon_check"
                app:tint="?attr/colorOnSecondary" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/email_verified"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/textSmall"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>