<resources>
    <!-- ======================================================================================= -->
    <!-- Base application theme. -->
    <!-- ======================================================================================= -->
    <style name="Theme.TruckerCore" parent="Theme.Material3.DayNight">

        <item name="android:colorBackground">@color/lightBackground</item>


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryVariant">@color/lightBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkRed</item>
        <item name="colorSecondaryVariant">@color/lightRed</item>
        <item name="colorOnSecondary">@color/light</item>

        <!-- Other colors -->
        <item name="backgroundColor">@color/lightBackground</item>
        <item name="textColor">@color/dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- ou sua cor desejada -->

        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat</item>

    </style>

    <!-- ======================================================================================= -->
    <!-- Base fonts for activities -->
    <!-- ======================================================================================= -->
    <style name="Theme.TruckerCore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TruckerCore.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Base fonts for fabs -->
    <!-- ======================================================================================= -->
    <style name="fabPrimary">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="fabSecondary">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="tint">@color/white</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Base fonts for text -->
    <!-- ======================================================================================= -->
    <style name="textEmphasis">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textBig</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textDefault">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="textAlert">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Base fonts for buttons-->
    <!-- ======================================================================================= -->
    <style name="buttonPrimary">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:layout_marginHorizontal">48dp</item>
    </style>

    <style name="buttonSecondary">
        <item name="android:textColor">@color/grey</item>
        <item name="android:drawableTint">@color/grey</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:layout_marginHorizontal">48dp</item>
    </style>

    <style name="buttonTransparent">
        <item name="android:textColor">@color/grey</item>
        <item name="android:drawableTint">@color/grey</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/button_transparent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Base fonts for dialogs -->
    <!-- ======================================================================================= -->
    <style name="dialogLoadingBg">
        <item name="android:background">@drawable/background_circle</item>
        <item name="android:backgroundTint">@color/darkTransparent</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>