<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TruckerCore" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#850a16</item>
        <item name="colorPrimaryVariant">#C57D8E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#004aad</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Activity without action bar. -->
    <style name="Theme.TruckerCore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <!-- Base fonts for text -->
    <style name="TEXT_DEFAULT">
        <item name = "fontFamily">@font/poppins</item>
    </style>
    <style name="TEXT_HEADER">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

</resources>