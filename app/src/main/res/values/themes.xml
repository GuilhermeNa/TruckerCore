<resources>
    <!-- Base application theme. -->
    <style name="Theme.TruckerCore" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#850a16</item>
        <item name="colorPrimaryVariant">#C57D8E</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#004aad</item>
        <item name="colorSecondaryVariant">#0088CC</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Activity without action bar. -->
    <style name="Theme.TruckerCore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Activity with fullscreen. -->
    <style name="Theme.TruckerCore.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base fonts for text -->
    <style name="TEXT_DEFAULT">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TEXT_EMPHASIS">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Fabs -->
    <style name="FAB_SECONDARY">
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="FAB_PRIMARY">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="EXTENDED_FAB_PRIMARY">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="EXTENDED_FAB_SECONDARY">
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <!-- Buttons -->
    <style name="BUTTON_TRANSPARENT">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/shape_transparent_button</item>
    </style>

</resources>