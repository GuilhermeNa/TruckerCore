<resources>
    <!-- Base application theme. -->
    <style name="Theme.TruckerCore" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVar</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryVar</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- ======================================================================================= -->
    <!-- Base fonts for activities -->
    <!-- ======================================================================================= -->
    <style name="Theme.TruckerCore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TruckerCore.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Base fonts for text -->
    <!-- ======================================================================================= -->
    <style name="textDefault">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="textEmphasis">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textBig</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textAlert">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Base fonts for buttons-->
    <!-- ======================================================================================= -->
    <style name="buttonPrimary">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="buttonSecondary">
        <item name="android:textColor">@color/grey</item>
        <item name="android:drawableTint">@color/grey</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/button_secondary</item>
    </style>

    <style name="buttonTransparent">
        <item name="android:textColor">@color/grey</item>
        <item name="android:drawableTint">@color/grey</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/button_transparent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Base fonts for fabs -->
    <!-- ======================================================================================= -->
    <style name="FAB_PRIMARY">
        <item name="android:backgroundTint">@color/primaryVar</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="FAB_SECONDARY">
        <item name="android:backgroundTint">@color/secondaryVar</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="EXTENDED_FAB_PRIMARY">
        <item name="android:backgroundTint">@color/primaryVar</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="EXTENDED_FAB_SECONDARY">
        <item name="android:backgroundTint">@color/secondaryVar</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>


</resources>