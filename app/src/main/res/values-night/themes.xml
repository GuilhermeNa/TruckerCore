<resources>
    <!-- ======================================================================================= -->
    <!-- Base application theme. -->
    <!-- ======================================================================================= -->
    <style name="Theme.TruckerCore" parent="Theme.Material3.Dark">

        <item name="colorPrimary">@color/colorPrimary</item> <!-- Azul claro -->
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item> <!-- Verde claro -->
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorSurface">@color/colorSurface</item> <!-- Fundo escuro dos cards/dialogs -->
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>

        <!-- Para FAB, botÃµes elevados -->
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimaryContainer</item>

        <item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/colorOnSecondaryContainer</item>

        <item name="colorError">@color/colorError</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="fontFamily">@font/montserrat</item>

    </style>

    <!-- ======================================================================================= -->
    <!-- Base fonts for activities -->
    <!-- ======================================================================================= -->
    <style name="Theme.TruckerCore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TruckerCore.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Buttons && Fabs-->
    <!-- ======================================================================================= -->
    <style name="buttonPrimary" parent="Widget.Material3.Button"/>

    <style name="buttonSecondary" parent="Widget.Material3.Button">
        <item name ="backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="buttonTertiary" parent="Widget.Material3.Button.IconButton">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fabSecondary" parent="Widget.Material3.FloatingActionButton.Secondary">
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="tint">?attr/colorOnSecondaryContainer</item>
        <item name="fabSize">mini</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Base fonts for dialogs -->
    <!-- ======================================================================================= -->
    <style name="dialogLoadingBg">
        <item name="android:background">@drawable/background_circle</item>
        <item name="android:backgroundTint">@color/transparentDialog</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>