<resources>

    <!-- ======================================================================================= -->
    <!-- Base application theme. -->
    <!-- ======================================================================================= -->
    <style name="Theme.TruckerCore" parent="Theme.Material3.Dark">

        <item name="android:colorBackground">@color/darkBackground</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkRed</item>
        <item name="colorPrimaryVariant">@color/lightRed</item>
        <item name="colorOnPrimary">@color/light</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkBlue</item>
        <item name="colorSecondaryVariant">@color/lightBlue</item>
        <item name="colorOnSecondary">@color/dark</item>

        <!-- Other colors -->
        <item name="backgroundColor">@color/darkBackground</item>
        <item name="textColor">@color/light</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- ou sua cor desejada -->

        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat</item>

    </style>

    <!-- ======================================================================================= -->
    <!-- Base fonts for activities -->
    <!-- ======================================================================================= -->
    <style name="Theme.TruckerCore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TruckerCore.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Base fonts for fabs -->
    <!-- ======================================================================================= -->
    <style name="fabPrimary">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="fabSecondary">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="tint">@color/white</item>
    </style>


    <!-- Base fonts for text -->
    <style name="textDefault">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="textEmphasis">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textBig</item>
        <item name="android:textStyle">bold</item>
    </style>



    <!-- Buttons -->
    <style name="buttonPrimary">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="buttonTransparent">
        <item name="android:textColor">@color/grey</item>
        <item name="android:drawableTint">@color/grey</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/button_transparent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>