<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="${appName}"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TruckerCore"
        tools:targetApi="31">

        <!-- Para o flavor "individual" -->
        <activity
            android:name="com.example.truckercore.individual.view.login.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TruckerCore.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Para o flavor "business_admin" -->
        <activity
            android:name="com.example.truckercore.business_admin.view.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.TruckerCore.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Para o flavor "business_driver" -->
        <activity
            android:name="com.example.truckercore.business_driver.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TruckerCore.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>
</manifest>